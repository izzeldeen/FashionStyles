@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul >
@if (SignInManager.IsSignedIn(User))
{
    <li >
        <a   asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> @await Component.InvokeAsync("UserName")   @*Hello @User.Identity.Name!*@</a>
    </li>
    <li >
        <form   asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="genric-btn primary" style="color:white; background-color:#000000;">Log out</button>
        </form>
    </li>
}
else
{
    <li >
        <a  asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li>
        <a  asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
